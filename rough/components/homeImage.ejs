<style>
body, html {
  height: 100%;
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}



.bg-image {
  /* Full height */
  height: 50%; 
  
  /* Center and scale the image nicely */
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

/* Images used */
.img1 { background-image: url("https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/spa-woman-female-enjoying-massage-in-spa-centre-royalty-free-image-492676582-1549988720.jpg?crop=1.00xw:0.755xh;0,0&resize=640:*"); }
.img2 { background-image: url("https://images.squarespace-cdn.com/content/v1/589d399bcd0f6820a510fd73/1623243720814-V0OX81PO0DJJ2HDLR1XU/shutterstock_1019629426.jpg?format=1500w"); }
.img3 { background-image: url("https://lh3.googleusercontent.com/ZQhZ20iEtb9ZmbEto2YLDDUVaoLGoaGWkpu7909ZEKzbIIhBZphHsKUbvOLtW8sj6Qmyt77r2Rx3_U55-dD7cRU=s800"); }
.img4 { background-image: url("https://www.byrdie.com/thmb/GCSBPg_CDg9VhhmLDHWJmVvmQro=/1000x800/filters:fill(auto,1)/GettyImages-144110740-crop-4b048fda4bcb4c47b32c420258e88b50.jpg"); }
.img5 { background-image: url("https://wallpaperaccess.com/full/139142.jpg"); }
.img6 { background-image: url("https://wallpaperaccess.com/full/139080.jpg"); }

/* Position text in the middle of the page/image */
.bg-text {
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0, 0.4);
    color: white;
    font-weight: bold;
    font-size: 24px;
    border: 10px solid #f1f1f1;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    width: 277px;
    padding: 0px;
    text-align: center;
}
</style>
</head>
<body>

<div class="bg-image img1"></div>
<div class="bg-image img2"></div>
<div class="bg-image img3"></div>
<div class="bg-image img4"></div>
